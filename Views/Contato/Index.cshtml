@model List<ContatoModel>
@{
    ViewData["Title"] = "Contatos";
}
<br />
<div>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Criar" role="button"><i class="fa fa-plus"></i></a>
</div>
<br />

<div class="text-center">

    <h1>@ViewData["Title"]</h1>
    <br />
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
        <br />
    }
    <table class="table table-primary table-striped" id="tabela-contatos">
        <thead>
            <tr>
                <th class="text-center" scope="col">&nbsp;&nbsp;&nbsp;&nbsp; #</th>
                <th class="text-center">Nome</th>
                <th class="text-center">Email</th>
                <th class="text-center">Telefone</th>
                <th class="text-center">Data de cadastro</th>
                <th class="text-center">Editar / Excluir</th>


            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
            <tr>
                <th scope="row">@contato.Id</th>
                <td>@contato.Nome</td>
                <td>@contato.Email</td>
                <td>@contato.Telefone</td>
                <td>@contato.DataCadastro</td>
                <td>
                    <div>
                        <a role="button" class="btn btn-secondary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar"><i class="fa fa-pencil"></i></a>
                        <a role="button" class="btn btn-secondary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Excluir"><i class="fa fa-trash"></i></a>
                    </div>
                </td>
            </tr>
                }
            }
        </tbody>
    </table>

</div>

